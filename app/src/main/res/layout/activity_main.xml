<?xml version="1.0" encoding="utf-8"?>

<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="3dp"
        android:paddingLeft="16dp"
        android:paddingRight="3dp"
        android:paddingTop="220dp"
        tools:context="com.sample.foo.samplecalculator.MainActivity">

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoTextView"
        android:enabled="false"
        android:gravity="bottom"
        android:lines="2"
        android:maxLines="2"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btn_1"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:text="MC"
         />
    <Button
        android:id="@+id/btn_2"
        android:layout_width="@dimen/size_btn"
        android:layout_marginLeft="70dp"
        android:layout_height="wrap_content"
        android:text="MR"


      />
    <Button
        android:id="@+id/btn_3"
        android:layout_width="@dimen/size_btn"
        android:layout_marginLeft="140dp"
        android:layout_height="wrap_content"
        android:text="MS"
       />
    <Button
        android:id="@+id/btn_4s"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:text="M+"
        android:layout_marginLeft="210dp"
        />
    <Button
        android:id="@+id/btn_5"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:text="M-"
        android:layout_marginLeft="280dp"
         />
    <Button

        android:id="@+id/btn_6"
        android:text="←"
        android:textScaleX="3"
        android:layout_width="@dimen/size_btn"
        android:layout_marginTop="45dp"
        android:layout_height="wrap_content"
         />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/btn_6"
        android:layout_alignBottom="@+id/btn_6"
        android:layout_toEndOf="@+id/btn_1"
        android:layout_toRightOf="@+id/btn_1"
        android:text="CE" />
    <Button
        android:id="@+id/btn_9"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:text="C"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="@dimen/size_left_two"
        />
    <Button

        android:id="@+id/btn_10"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:text="∓"
        android:rotation="180"
        android:layout_marginLeft="@dimen/size_left_three"
        android:layout_marginTop="45dp"
        />
    <Button

        android:id="@+id/btn_11"
        android:layout_marginLeft="@dimen/size_left_four"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:text="√"
        android:layout_marginTop="45dp"
       />
    <Button

        android:id="@+id/btn_12"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:text="7"
        android:layout_marginTop="90dp"
        />
    <Button
        android:id="@+id/btn_13"
        android:layout_marginTop="90dp"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:text="8"
        android:layout_marginLeft="@dimen/size_left_one"

       />
    <Button
        android:id="@+id/btn_14"
        android:layout_marginTop="90dp"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:text="9"
        android:layout_marginLeft="@dimen/size_left_two"

       />
    <Button

        android:id="@+id/btn_15"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="@dimen/size_left_three"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:text="/"
       />
    <Button

        android:id="@+id/btn_16"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="@dimen/size_left_four"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:text="%"
       />
    <Button

        android:id="@+id/btn_17"
        android:layout_marginTop="135dp"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:text="4"
       />
    <Button

        android:id="@+id/btn_18"
        android:layout_marginTop="135dp"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_left_one"
        android:text="5"
       />
    <Button

        android:id="@+id/btn_19"
        android:layout_marginTop="135dp"
        android:layout_marginLeft="@dimen/size_left_two"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:text="6"
       />
    <Button

        android:id="@+id/btn_20"
        android:layout_marginTop="135dp"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_left_three"
        android:text="*"
       />

    <Button

        android:id="@+id/btn_21"
        android:layout_marginTop="135dp"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_left_four"
        android:text="1/x"
       />
    <Button

        android:id="@+id/btn_22"
        android:layout_marginTop="180dp"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:text="3"
       />
    <Button

        android:id="@+id/btn_23"
        android:layout_marginLeft="@dimen/size_left_one"
        android:layout_marginTop="180dp"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:text="2"
       />
    <Button

        android:id="@+id/btn_24"
        android:layout_marginLeft="@dimen/size_left_two"
        android:layout_marginTop="180dp"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:text="1"
       />

    <Button
        android:id="@+id/btn_25"
        android:layout_marginLeft="@dimen/size_left_three"
        android:layout_marginTop="180dp"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:text="-" />

    <Button

        android:id="@+id/btn_27"
        android:layout_marginTop="225dp"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="0"
        />
    <Button

        android:id="@+id/btn_28"
        android:layout_marginLeft="@dimen/size_left_three"
        android:layout_marginTop="225dp"
        android:layout_width="@dimen/size_btn"
        android:layout_height="wrap_content"
        android:text="+"
        />
    <Button

        android:id="@+id/btn_29"
        android:layout_marginLeft="@dimen/size_left_two"
        android:layout_marginTop="225dp"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text=","
        />
    <Button

        android:id="@+id/btn_31"
        android:layout_marginLeft="@dimen/size_left_four"
        android:layout_marginTop="180dp"
        android:layout_width="70dp"
        android:layout_height="93dp"
        android:text="="
        />

    </RelativeLayout>
</layout>

